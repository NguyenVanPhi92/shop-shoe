{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto",
                "arrowParens": "avoid",
                "jsxSingleQuote": false,
                "printWidth": 120,
                "requirePragma": false,
                "semi": false,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "all",
                "useTabs": false
            }
        ]
    }
}
